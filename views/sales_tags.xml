<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <!--SalesTags tree view-->
    <record id='tags_tree_view' model='ir.ui.view'>
        <field name='name'>tags.tree.view</field>
        <field name='model'>sales.tags</field>
        <field name='arch' type='xml'>
            <tree string='Tags list'>
                <field name='name'/>
            </tree>
        </field>
    </record>

    <!-- SalesTags form view-->
    <record id='tags_form_view' model='ir.ui.view'>
        <field name='name'>tags.form.view</field>
        <field name='model'>sales.tags</field>
        <field name='arch' type='xml'>
            <form string='Tags'>
                <sheet>
                    <group>
                        <field name='name'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id='action_tags_list' model='ir.actions.act_window'>
        <field name='name'>Tags List</field>
        <field name='type'>ir.actions.act_window</field>
        <field name='res_model'>sales.tags</field>
        <field name='view_mode'>tree,form,kanban</field>
        <field name='help' type='html'>
            <p class='o_view_nocontent_smiling_face'>
                Create one
            </p>
        </field>
    </record>
  


    <menuitem id='sales_tags_root' name='Sales Tags' sequence='2'/>

    <menuitem id='tags_list' name='Tags List' parent='sale.menu_sale_config' action='action_tags_list' sequence='1'/>




</odoo>